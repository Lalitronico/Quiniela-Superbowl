# PostgreSQL Database (Railway)
DATABASE_URL=postgresql://user:password@host:port/database?schema=public

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (required in production for CORS)
FRONTEND_URL=https://your-vercel-app.vercel.app

# Admin API Key - Used as default for the 'default' brand
# Generate a secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_API_KEY=CHANGE_THIS_TO_A_SECURE_32_CHAR_KEY
